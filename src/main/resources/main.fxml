<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Wargames.frontend.ui.MainController">
    <top>
        <VBox>
            <children>
                <MenuBar>
                    <menus>
                        <Menu mnemonicParsing="false" text="File">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#importFromCsv" text="Import from .CSV..." />
                                <MenuItem mnemonicParsing="false" onAction="#exportToCsv" text="Export to .CSV..." />
                                <SeparatorMenuItem mnemonicParsing="false" />
                                <MenuItem mnemonicParsing="false" onAction="#exitApplication" text="Exit" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Edit">
                            <items>
                                <MenuItem accelerator="A" mnemonicParsing="false" onAction="#addArmy" styleClass="addContact" text="Add new Army..." />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Help">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#showAboutDialog" text="About" />
                            </items>
                        </Menu>
                        <Menu mnemonicParsing="false" text="Admin">
                            <items>
                                <MenuItem mnemonicParsing="false" onAction="#showLoginDialog" text="Log In..." />
                            </items>
                        </Menu>
                    </menus>
                </MenuBar>
                <ToolBar prefHeight="40.0" prefWidth="200.0">
               <items>
                  <Button fx:id="clearButton" mnemonicParsing="false" text="Clear" />
                  <Button fx:id="simulateButton" alignment="TOP_LEFT" mnemonicParsing="false" prefHeight="26.0" prefWidth="66.0" text="Simulate" />
               </items>
                </ToolBar>
            </children>
        </VBox>
    </top>
    <bottom>
        <HBox style="-fx-background-color: #999999;" BorderPane.alignment="CENTER">
            <children>
                <Text text="WargameStatus: OK" />
            </children>
        </HBox>
    </bottom>
    <center>
        <TableView fx:id="contactDetailsTableView" prefHeight="276.0" prefWidth="600.0">
            <columns>
                <TableColumn maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Army One">
                    <cellValueFactory>
                        <PropertyValueFactory property="armyOne" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Winner">
                    <cellValueFactory>
                        <PropertyValueFactory property="winner" />
                    </cellValueFactory>
                </TableColumn>
                <TableColumn maxWidth="-1.0" minWidth="200.0" prefWidth="-1.0" text="Army Two">
                    <cellValueFactory>
                        <PropertyValueFactory property="armyTwo" />
                    </cellValueFactory>
                </TableColumn>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </center>
